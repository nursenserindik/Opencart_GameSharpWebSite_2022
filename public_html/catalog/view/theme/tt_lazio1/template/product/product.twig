						<a href="{{ tags[i].href }}">{{ tags[i].tag }}</a>,
					{% else %} 
						<a href="{{ tags[i].href }}">{{ tags[i].tag }}</a> 
					{% endif %}
				{% endfor %}
			</p>
		{% endif %}
	  </div><!-- block-2 -->
		</div><!-- content-product -->
